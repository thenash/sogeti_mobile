<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Connect.Views.VarianceViewCard"
             xmlns:effects="clr-namespace:Connect.Effects">
  <ContentView.Content>
    <Frame CornerRadius="0"
           OutlineColor="{StaticResource DarkGray}"
           HasShadow="false"
           Padding="0">
      <Frame.Effects>
        <effects:DropShadowEffect/>
      </Frame.Effects>

      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="10" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <BoxView x:Name="statusIndicator"
                 HorizontalOptions="Fill"
                 BackgroundColor="White"
                 Grid.Row="0"
                 Grid.Column="0"/>
        <Label x:Name="varianceCardStatus"
               Text="ALL"
               HorizontalOptions="Center"
               FontSize="Micro"
               Grid.Row="1"
               Grid.Column="0"/>
      </Grid>
    </Frame>
  </ContentView.Content>
</ContentView>